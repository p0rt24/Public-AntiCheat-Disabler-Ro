local oldwrap
oldwrap = hookfunction(coroutine.wrap, function(func, ...)
    if checkcaller() then 
        return oldwrap(func, ...) 
    end
    local info = debug.getinfo(func, "n")

    if info and info.name == "Task" then
        warn("ðŸš« Ð—Ð°Ð±Ð»Ð¾ÐºÐ¸Ñ€Ð¾Ð²Ð°Ð½Ð° ÐºÐ¾Ñ€ÑƒÑ‚Ð¸Ð½Ð° 'Task'")
        return task.wait(9e9)
    end
    return oldwrap(func, ...)
end) 
